{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "types": [
      "jasmine",
      "node",
      "applicationinsights-js"
    ],
    "lib": ["es2015", "dom"],
    "outDir": "dist"
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "compileOnSave": false,
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
